rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // User profile images
    match /user_images/{userId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Product images - authenticated users can upload
    match /products/{productId}/{allPaths=**} {
      allow read: if true;
      allow write, delete: if request.auth != null;
    }
  }
}
